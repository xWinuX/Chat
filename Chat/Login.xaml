<Window x:Class="Chat.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="500">
    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="55" />
            <RowDefinition MaxHeight="20" />
            <RowDefinition MaxHeight="30" />
            <RowDefinition MaxHeight="30" />
            <RowDefinition MaxHeight="30" />
            <RowDefinition MaxHeight="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Top">Chat</Label>
        <Label Grid.Row="1" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Top">By Edwin Baumann</Label>
        <Label Grid.Row="2" Margin="0 2 0 0" HorizontalAlignment="Center" VerticalAlignment="Bottom">Server</Label>
        <TextBox Grid.Row="3" Margin="5" TextAlignment="Center" />
        <Label Grid.Row="4" Margin="0 2 0 0" HorizontalAlignment="Center" VerticalAlignment="Bottom">Username</Label>
        <TextBox Grid.Row="5" Margin="5" TextAlignment="Center" />
        <Button Grid.Row="6" Margin="5 30 5 0 ">Login</Button>
    </Grid>
</Window>