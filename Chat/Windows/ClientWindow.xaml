<Window x:Class="Chat.Windows.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:userControls="clr-namespace:Chat.UserControls"
        mc:Ignorable="d"
        Title="Client" Height="450" Width="800"
        Closed="ClientWindow_OnClosed"
        Loaded="ClientWindow_OnLoaded"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="30"/>
            <RowDefinition />
            <RowDefinition MaxHeight="70" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition MaxWidth="100"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Name="BtnLeave" HorizontalAlignment="Left" Margin="5" Click="BtnLeave_OnClick">Leave</Button>
        <userControls:ScrollTextDisplay Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0" x:Name="ScrvChat" Margin="5" BorderThickness="5" Background="LightGray" />
        <TextBox Grid.Row="2" Grid.Column="0" Name="TxbMessage" Margin="5"></TextBox>
        <Button Grid.Row="2" Grid.Column="1" Name="BtnSend" Margin="5" Click="BtnSend_OnClick">Send</Button>
    </Grid>
</Window>
