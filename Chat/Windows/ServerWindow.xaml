<Window x:Class="Chat.Windows.ServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:userControls="clr-namespace:Chat.UserControls"
        mc:Ignorable="d"
        Title="Server" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition MaxHeight="40" />
        </Grid.RowDefinitions>
        
        <userControls:ScrollTextDisplay x:Name="ScrtConsole" Grid.Row="0" Margin="5" BorderThickness="5" Background="Black" />
        <Button Name="BtnCloseServer" Grid.Row="1" Margin="5" Click="BtnCloseServer_OnClick">Close Server</Button>
    </Grid>
</Window>