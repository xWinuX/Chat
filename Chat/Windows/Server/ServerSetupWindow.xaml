<Window x:Class="Chat.Windows.Server.ServerSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:userControls="clr-namespace:Chat.UserControls"
        mc:Ignorable="d"
        Title="ServerSetup" Height="150" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="60" />

            <RowDefinition />
        </Grid.RowDefinitions>
        <userControls:AddressPortForm Grid.Row="0" x:Name="ApfAddressPort" />
        <Button Grid.Row="1" Name="BtnStartServer" Margin="5" Click="BtnStartServer_OnClick">Start Server</Button>
    </Grid>
</Window>